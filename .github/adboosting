export default function AuthPage(){
  const [name, setName] = useState('');
  const [role, setRole] = useState('Product Seller');
  const [email, setEmail] = useState('');
  const nav = useNavigate();

  function signupLocal() {
    if (!name) return alert('Enter name');
    const user = { name, role, email, id: 'local-' + Date.now() };
    saveAuth(user);
    alert('Signed up (local demo). Free trial started.');
    nav('/dashboard');
  }

  function loginLocal() {
    if (!name) return alert('Enter name to login (demo)');
    const user = { name, role, email, id: 'local-' + Date.now() };
    saveAuth(user);
    nav('/dashboard');
  }

  return (
    <div className="max-w-md mx-auto bg-gray-800 p-6 rounded">
      <h2 className="text-xl font-semibold mb-4">Sign up — 30 day free trial</h2>
      <input className="w-full p-2 mb-3 bg-gray-700 rounded text-white" placeholder="Name" value={name} onChange={e=>setName(e.target.value)} />
      <input className="w-full p-2 mb-3 bg-gray-700 rounded text-white" placeholder="Email (optional)" value={email} onChange={e=>setEmail(e.target.value)} />
      <select className="w-full p-2 mb-3 bg-gray-700 rounded text-white" value={role} onChange={e=>setRole(e.target.value)}>
        <option>Product Seller</option>
