import React, { useState } from 'react';
import API from '../services/api';

export default function Payments(){
  const [phone, setPhone] = useState('2547XXXXXXXX');
  const [mode, setMode] = useState('subscribe');
  const [amount, setAmount] = useState(100);
  const [loading, setLoading] = useState(false);

  async function pay(){
    setLoading(true);
    try {
      if(mode === 'subscribe'){
        await API.post('/mpesa/subscribe', { userId: null, phone, plan: 'standard', price: amount });
        alert('STK Push initiated. Check phone for prompt.');
      } else {
        await API.post('/mpesa/topup', { userId: null, phone, amount });
        alert('STK Push initiated for top-up.');
      }
    } catch(e){
      alert('Payment error: ' + (e?.response?.data?.error || e.message));
    }
    setLoading(false);
  }

  return (
    <div className="max-w-md mx-auto bg-card p-6 rounded"># create folder
